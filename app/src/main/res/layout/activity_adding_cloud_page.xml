<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="donuseiei.test.com.authen.AddingCloud_page"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding Cloud"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/add_cloudProv"
        android:textColor="#000000"
        android:padding="5dp"
        android:background="@color/white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="12"
        android:layout_margin="10dp"
        android:hint="Cloud AccountProvider" />
    <EditText
        android:id="@+id/add_cloud_id"
        android:textColor="#000000"
        android:padding="5dp"
        android:background="@color/white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_margin="10dp"
        android:hint="Cloud Account id"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/add_cloud_password"
        android:textColor="#000000"
        android:padding="5dp"
        android:background="@color/white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_margin="10dp"
        android:hint="Cloud Account password"/>
    <Button
        android:textColor="@color/text_white"
        android:background="#7c7c7c"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_add_addpage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add"/>
    <Button
        android:layout_margin="10dp"
        android:textColor="@color/text_white"
        android:background="#7c7c7c"
        android:id="@+id/btn_cancel_addpage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"/>

</LinearLayout>
