<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="donuseiei.test.com.authen.page.EachDash_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">
                <Button android:id="@+id/btn_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Date" />

                <Button android:id="@+id/btn_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Date" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_get_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getting Report"
                android:layout_gravity="center" />

            <TextView android:id="@+id/showMyDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/report_text_cpu"/>
                <com.jjoe64.graphview.GraphView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:id="@+id/report_cpu" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--android:background="@color/background_memdash">-->
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memory"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/report_text_mem"/>
                <com.jjoe64.graphview.GraphView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:id="@+id/report_mem" />
            </LinearLayout>>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--android:background="@color/background_storagedash">-->
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Storage"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/report_text_storage"/>
                <com.jjoe64.graphview.GraphView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:id="@+id/report_storage" />
            </LinearLayout>>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--android:background="@color/background_netdash">-->
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/report_text_net"/>
                <com.jjoe64.graphview.GraphView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:id="@+id/report_net" />
            </LinearLayout>>
        </LinearLayout>
    </ScrollView>
</LinearLayout>