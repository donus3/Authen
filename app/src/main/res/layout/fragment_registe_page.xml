<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/login_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_background"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/register_title"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@color/white_background"
        android:padding="5dp"
        android:background="@color/white_background"
        android:hint="Full Name"
        android:ems="10"
        android:id="@+id/regis_fullname_edit"
        android:layout_marginTop="27dp" />

    <EditText
        android:hint="Email Address"
        android:padding="5dp"
        android:background="@color/white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white_background"
        android:textColor="@color/white_background"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/regis_email_edit"
        android:layout_marginTop="30dp" />

    <EditText
        android:hint="Password"
        android:padding="5dp"
        android:background="@color/white_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white_background"
        android:textColor="@color/white_background"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/regis_pass_edit"
        android:layout_marginTop="30dp"/>

    <Button
        android:textColor="@color/text_white"
        android:background="@color/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/regis_submit_button"
        android:layout_marginTop="29dp" />

    <Button
        android:textColor="@color/text_white"
        android:background="#f84525"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/regis_cancel_button"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/regis_submit_button"
        android:layout_alignLeft="@+id/regis_submit_button"
        android:layout_alignStart="@+id/regis_submit_button"
        android:layout_alignRight="@+id/regis_submit_button"
        android:layout_alignEnd="@+id/regis_submit_button" />
    </LinearLayout>
</ScrollView>
